@using MIS.Common
@model IEnumerable<MIS.ViewModels.View.AdministratorManage.AdministratorShowUserViewModel>

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/addons/datatables.min.css" rel="stylesheet">

<div class="row">
    <h1>Administrator manage</h1>
</div>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">User name</th>
            <th class="th-sm">First name</th>
            <th class="th-sm">Last name</th>
            <th class="th-sm">Company name</th>
            <th class="th-sm">Email</th>
            <th class="th-sm">Phone number</th>
            <th class="th-sm">Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <div class="d-flex container-fluid justify-content-between">
                        <div>
                            @user.CompanyName
                        </div>
                        @if (user.CompanyId != null)
                        {
                            <div>
                                <a asp-action="Delete" asp-route-id="@user.CompanyId">
                                    <img src="~/ico/x-2x.png" class="mx-auto" />
                                </a>
                            </div>
                        }
                    </div>
                </td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <div class="d-flex container-fluid justify-content-between">
                        <div>
                            @user.Role
                        </div>
                        <div>
                            <a asp-area="Administrator" asp-controller="AdministratorManage" asp-action="Create" asp-route-id="@user.Id">
                                <img src="~/ico/plus-2x.png" class="mx-auto" />
                            </a>
                            <a asp-area="Administrator" asp-controller="AdministratorManage" asp-action="Remove" asp-route-id="@user.Id">
                                <img src="~/ico/x-2x.png" class="mx-auto" />
                            </a>
                        </div>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript" src="~/js/addons/datatables.min.js"></script>
    <script src="~/js/site.js"></script>
}