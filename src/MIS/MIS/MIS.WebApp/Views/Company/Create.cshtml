@using MIS.ViewModels.Input.Company
@model CompanyCreateInputModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="container-fluid justify-content-center d-flex">Create Company</h1>
<hr class="w-50" />


<div class="row container-fluid justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="row container-fluid justify-content-between">
                <div class="form-group" >
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="form-group" >
                    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>