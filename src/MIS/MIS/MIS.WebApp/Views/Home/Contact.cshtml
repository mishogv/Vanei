@using MIS.ViewModels.Input.Home
@model ContactCreateInputModel

@{
    ViewData["Title"] = "Contact";
}

<!-- Section: Contact v.1 -->
<section class="my-5">
    <!-- Section heading -->
    <h2 class="h1-responsive font-weight-bold text-center my-5">Contact us</h2>
    <!-- Grid row -->
    <div class="row">
        <!-- Grid column -->
        <div class="col-lg-5 mb-lg-0 mb-4">

            <!-- Form with header -->
            <div class="card">
                <div class="card-body">
                    <!-- Header -->
                    <div class="form-header accent-1">
                        <h3 class="mt-2"><i class="fas fa-envelope"></i> Write to us:</h3>
                    </div>
                    <!-- Body -->
                    <form asp-controller="Home" asp-action="Contact" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="md-form">
                            <i class="fas fa-user prefix grey-text"></i>
                            <input asp-for="Name" type="text" id="form-name" placeholder="Your name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="md-form">
                            <i class="fas fa-envelope prefix grey-text"></i>
                            <input asp-for="Email" type="text" id="form-email" placeholder="Your email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="md-form">
                            <i class="fas fa-tag prefix grey-text"></i>
                            <input asp-for="Subject" type="text" id="form-Subject" placeholder="Subject" class="form-control">
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="md-form">
                            <i class="fas fa-pencil-alt prefix grey-text"></i>
                            <textarea asp-for="Description" id="form-text" class="form-control md-textarea" placeholder="Send message" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Form with header -->

        </div>
        <!-- Grid column -->
        <!-- Grid column -->
        <div class="col-lg-7 container-fluid overflow-auto">

            <!--Google map-->
            <div id="map-container-section" class="z-depth-1-half map-container-section mb-4" style="height: 400px">
                <div class="gmap_canvas">
                    <iframe width="604" height="400" id="gmap_canvas" src="https://maps.google.com/maps?q=Ruse%20Borisova%2025&t=&z=19&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                    <a href="https://www.enable-javascript.net"></a>
                </div>
            </div>
            <!-- Buttons-->
            <div class="row text-center">
                <div class="col-md-4">
                    <a class="btn-floating accent-1">
                        <i class="fas fa-map-marker-alt"></i>
                    </a>
                    <p>Ruse, 7000</p>
                    <p class="mb-md-0">Bulgaria</p>
                </div>
                <div class="col-md-4">
                    <a class="btn-floating accent-1">
                        <i class="fas fa-phone"></i>
                    </a>
                    <p>+ 359 88 27 13 681</p>
                    <p class="mb-md-0">Mon - Fri, 8:00-22:00</p>
                </div>
                <div class="col-md-4">
                    <a class="btn-floating accent-1">
                        <i class="fas fa-envelope"></i>
                    </a>
                    <p>mihogv@gmail.com</p>
                    <p class="mb-0">mihogv@gmail.com</p>
                </div>
            </div>
        </div>
        <!-- Grid column -->

    </div>
    <!-- Grid row -->

</section>
<!-- Section: Contact v.1 -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}