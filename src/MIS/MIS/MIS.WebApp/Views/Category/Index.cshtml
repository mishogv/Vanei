@using MIS.ViewModels.View.Category
@model CategoryIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<link href="~/css/addons/datatables.min.css" rel="stylesheet">

<h1>Categories</h1>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">Name</th>
            <th class="th-sm">Warehouse</th>
            <th class="th-sm">Products count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
        <tr>
            <td>@category.Name</td>
            <td>@category.WarehouseName</td>
            <td>
                <div class="d-flex container-fluid justify-content-between">
                    <div>
                        @category.ProductsCount
                    </div>
                    <div>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                            <img src="~/ico/open-iconic-master/png/pencil-2x.png" class="mx-auto" />
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                            <img src="~/ico/open-iconic-master/png/x-2x.png" class="mx-auto" />
                        </a>
                    </div>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- MDBootstrap Datatables  -->
    <script type="text/javascript" src="~/js/addons/datatables.min.js"></script>

    <script>
        //TODO : move in other file
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}