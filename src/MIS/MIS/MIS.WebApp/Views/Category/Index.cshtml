@using MIS.ViewModels.View.Category
@model CategoryIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<link href="~/css/addons/datatables.min.css" rel="stylesheet">

<h1 class="d-flex justify-content-center">Categories</h1>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">Name</th>
            <th class="th-sm">Warehouse</th>
            <th class="th-sm">Products count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.WarehouseName</td>
                <td>
                    <div class="d-flex container-fluid justify-content-between">
                        <div>
                            @category.ProductsCount
                        </div>
                        <div>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                                <img src="~/ico/pencil-2x.png" class="mx-auto" />
                            </a>
                            <a  value="@category.Name" class="category-modal" data-toggle="modal" data-target="#basicExampleModal" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                                <img src="~/ico/x-2x.png" class="mx-auto" />
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Do you want to delete this product?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <a class="btn btn-danger continue-delete">Continue</a>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/modals.js"></script>
    <script type="text/javascript" src="~/js/addons/datatables.min.js"></script>
    <script src="~/js/site.js"></script>
}