@using MIS.Services
@using MIS.ViewModels.Input.Category
@model CreateCategoryInputModel
@inject IWareHouseService Service
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateCategoryInputModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <select asp-for="WareHouseName">
                @foreach (var item in Service.GetAllUserWareHousesByUserName(this.User.Identity.Name))
                {
                    <option value="@item.Name" >@item.Name</option>
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="WareHouse" asp-action="Index">Back to Warehouse</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
