@using MIS.ViewModels.Input.Category
@model EditCategoryInputModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="d-flex justify-content-center">Edit category</h1>

<hr class="w-50" />
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Category" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <input type="hidden" asp-for="Id" value="@Model.Id" />
            </div>
            <div class="row d-flex justify-content-center">
                <div class="form-group mt-3">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back to all categories</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
