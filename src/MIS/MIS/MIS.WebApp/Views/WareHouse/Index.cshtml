@using MIS.ViewModels.View.WareHouse
@model IndexWarehouseViewModel

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/addons/datatables.min.css" rel="stylesheet">

<div class="row">
    <h1>@Model.WareHouseName</h1>
    @if (!Model.IsFavorite)
    {
        <form asp-controller="WareHouse" asp-action="Favorite" asp-route-id="@Model.Id" method="get">
            <input class="btn btn-primary ml-5" value="Make it Favorite" type="submit" />
        </form>
    }
</div>
<div>
    <span>Categories</span>
    <a asp-controller="Category" asp-action="Create">Create</a>
</div>
<div>
    <span>Products</span>
    <a asp-controller="Product" asp-action="Create" asp-route-wareHouseName="@Model.WareHouseName">Create</a>
</div>

<div>Choose other warehouse</div>
<div class="dropdown">
    <a class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown"
       aria-haspopup="true" aria-expanded="false">Warehouse</a>

    <div class="dropdown-menu dropdown-primary">
        @foreach (var warehouse in Model.WarehouseDropdown)
        {
            <a asp-controller="WareHouse" asp-action="Index" asp-route-id="@warehouse.Id" class="dropdown-item">@warehouse.Name</a>
        }
    </div>
</div>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">Name</th>
            <th class="th-sm">Price</th>
            <th class="th-sm">Quantity</th>
            <th class="th-sm">Barcode</th>
            <th class="th-sm">Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products.OrderBy(x => x.CategoryName))
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.BarCode</td>
                <td>@product.CategoryName</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- MDBootstrap Datatables  -->
    <script type="text/javascript" src="~/js/addons/datatables.min.js"></script>

    <script>
        //TODO : move in other file
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}