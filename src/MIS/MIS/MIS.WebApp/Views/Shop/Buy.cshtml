@using MIS.ViewModels.SystemProductModels;
@model SystemProductBuyViewModel

@{
    ViewData["Title"] = "Buy";
}

<form asp-controller="Shop" asp-action="Buy" method="post" class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-6">
            <div class="card">
                <img src="/img/@Model.ShowViewModel.ImgUrl" class="card-img-top" alt="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.ShowViewModel.Name</h5>
                    <p class="card-text">@Model.ShowViewModel.Description</p>
                    <label class="col-form-label">Price: @Model.ShowViewModel.Price BGN!</label>
                    <br/>
                </div>
            </div>
        </div>

        <div class="col-lg-8 col-md-8 col-sm-6 col-4">
            <input name="productId" id="productId" class="form-control" type="hidden" value="@Model.ShowViewModel.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="@Model.Email">Email:</label>
                <input asp-for="@Model.Email" class="form-control" disabled />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Username">Username:</label>
                <input asp-for="@Model.Username" class="form-control" disabled />
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.FirstName">First name:</label>
                <input asp-for="@Model.FirstName" class="form-control" disabled />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.LastName">Last name:</label>
                <input asp-for="@Model.LastName" class="form-control" disabled />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.CompanyName">Company name:</label>
                <input asp-for="@Model.CompanyName" class="form-control" />
                <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Address">Address:</label>
                <input asp-for="@Model.Address" class="form-control" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <input class="container-fluid btn btn-info" type="submit" value="Submit" />
        </div>

        <div class="col-lg-2 col-md-2 col-sm-6 col-6">
        </div>
    </div>
</form>