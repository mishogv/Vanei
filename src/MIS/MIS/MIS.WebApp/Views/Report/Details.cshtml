@using MIS.ViewModels.View.Report
@model DetailsReportViewModel
@{
    ViewData["Title"] = "Index";
}

<link href="~/css/addons/datatables.min.css" rel="stylesheet">

<h1 class="d-flex container-fluid justify-content-center">Report details</h1>



<div class="row mb-4">
    <div class="col-md-3">
        <label class="h6">
            Name:
        </label>
        <span>
            @Model.Name
        </span>
    </div>
    <div class="col-md-3">
        <label class="h6">
            From:
        </label>
        <span>
            @Model.From
        </span>
    </div>
    <div class="col-md-3">
        <label class="h6">
            To:
        </label>
        <span>
            @Model.To
        </span>
    </div>
    <div class="col-md-3">
        <label class="h6">
            Username:
        </label>
        <span>
            @Model.Username
        </span>
    </div>
</div>

<div class="container-fluid justify-content-center col-md-5 mb-2"><a asp-controller="Report" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary container-fluid">Delete</a></div>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm container-fluid" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">Issued on</th>
            <th class="th-sm">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var receipt in Model.Receipts)
        {
            <tr>
                <td><a asp-controller="Receipt" asp-action="Details" asp-route-id="@receipt.Id">@receipt.IssuedOn.ToString("G")</a></td>
                <td>@receipt.Total</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript" src="~/js/addons/datatables.min.js"></script>
    <script src="~/js/site.js"></script>
}