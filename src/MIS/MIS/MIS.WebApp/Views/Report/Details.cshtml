@using MIS.ViewModels.View.Report
@model ReportDetailsViewModel
@{
    ViewData["Title"] = "Index";
}

<link href="~/css/addons/datatables.min.css" rel="stylesheet">

<h1 class="d-flex container-fluid justify-content-center">Report details</h1>



<div class="row mb-4">
    <div class="col-md-3">
        <label class="h6">
            Name:
        </label>
        <span>
            @Model.Name
        </span>
    </div>
    <div class="col-md-3">
        <label class="h6">
            From:
        </label>
        <span>
            @Model.From
        </span>
    </div>
    <div class="col-md-3">
        <label class="h6">
            To:
        </label>
        <span>
            @Model.To
        </span>
    </div>
    <div class="col-md-3">
        <label class="h6">
            Username:
        </label>
        <span>
            @Model.UserUserName
        </span>
    </div>
</div>

<div class="container-fluid justify-content-center col-md-5 mb-2"><a  value="@Model.Name" id="report-delete" data-toggle="modal" data-target="#basicExampleModal" asp-controller="Report" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary container-fluid">Delete</a></div>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm container-fluid" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">Issued on</th>
            <th class="th-sm">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var receipt in Model.Receipts)
        {
            <tr>
                <td><a asp-controller="Receipt" asp-action="Details" asp-route-id="@receipt.Id">@receipt.IssuedOn.ToString("G")</a></td>
                <td>@receipt.Total</td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Do you want to delete this product?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <a class="btn btn-danger continue-delete">Continue</a>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/modals.js"></script>
    <script type="text/javascript" src="~/js/addons/datatables.min.js"></script>
    <script src="~/js/site.js"></script>
}